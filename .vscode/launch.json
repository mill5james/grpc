{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch .NET Client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet build client",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/dotnet/Client/bin/Debug/net6.0/Client.dll",
            "args": [],
            "cwd": "${workspaceFolder}/dotnet/Client",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Launch .NET Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet build server",
            "program": "${workspaceFolder}/dotnet/Server/bin/Debug/net6.0/Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/dotnet/Server",
            "console": "internalConsole",
            "stopAtEntry": false
        }
}